import java.util.Scanner;
class SBI{
    int total;
    void accout_holder_details(){
        System.out.println("account holder name:");
        System.out.println("total balance:"+total);
        
        
    }
    void withdraw()
    {
        int draw;
        Scanner s=new Scanner(System.in);
        System.out.println("Enter the amounmt you want to withdraw:");
        draw=s.nextInt();
        int balance=total-draw;
        total=balance;
        System.out.println("total amount="+total);
        
    }
    void deposit()
    {
        Scanner s=new Scanner(System.in);
        int dep;
        System.out.println("Enter the amount deposited:");
        dep=s.nextInt();
        total+=dep;
        System.out.pritnln("the balance="+total);
    }
    
}
class BankDetails{
        public static void main(String[] args) {
            SBI sbi=new SBI();
            Scanner s= new SBI();
            System.out.println("enter the total:");
            sbi.total=s.nextInt();
            While(true)
            {
                
                System.out.println("1.account detail:");
                System.out.println("2.withdraw:");
                System.out.println("3.deposit:");
                System.out.println("4.exit: ");
                opt=s.nextInt();
                if(opt==1)
                sbi.accout_holder_detail();
               if(opt==2)
                sbi.withdraw();
                else if(opt==3)
                sbi.deposit();
                else if(opt==4)
               System.out.println("Exited");
               break;
                
            }
}
